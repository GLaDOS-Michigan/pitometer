#!/bin/bash
# This script starts a rsl job using the local EP. It takes the following 
# positional arguments:
# ./start_rsl_trial-local <f> <duration> <client_treads> <paxos_batch_size>

if [ ${#@} -lt 4 ] || [ ${#@} -gt 4 ]
then
    echo "Usage: ./start_rsl_trial-local <f> <duration> <client_treads> <paxos_batch_size>"
    exit 1
fi


F=$1
CLIENT_DURATION=$2  # life of client in seconds
CLIENT_THREADS=$3
BATCH_SIZE=$4

DATA_DIR="data/rsl"
RSL_DIR="../rsl"

node_duration=$(( CLIENT_DURATION + 2 )) # make node live slightly longer than client

./$RSL_DIR/build

num_nodes=$(( 2*F + 1 ))

echo "Starting local rsl trial with f=$F, with client $CLIENT_DURATION seconds duration $CLIENT_THREADS threads, rsl batch size $BATCH_SIZE"

for ((i=$num_nodes;i>0;i--))
do  
    ./$RSL_DIR/run_server-local $num_nodes $i $node_duration $BATCH_SIZE > $DATA_DIR/node$i.log &
done

# Give nodes some time to initialize before starting client
sleep 1 

# Start the client
./$RSL_DIR/run_client-local $num_nodes $CLIENT_THREADS $CLIENT_DURATION $DATA_DIR

echo "Trial complete"