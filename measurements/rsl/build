#!/bin/bash
# Project build file

if uname -a | grep -q Darwin; then
    # Build on mac
    RSL_DIR='/Users/zhang/Dropbox/UMich2020sp/pitometer/measurements/rsl/rsl-go'
    export GOPATH=$RSL_DIR

    echo "Starting OSX build"

    echo "Building rsl server"
    go build -o rsl-main "$RSL_DIR/src/Main.go" 

    export GOPATH='/Users/zhang/go'
    export PATH=$PATH:$(go env GOPATH)/bin
    export GOPATH=$(go env GOPATH)

    echo "Building rsl client"
    ./build_client

elif uname -a | grep -q Linux; then
    # Build on Linux
    RSL_DIR='/home/nudzhang/Documents/pitometer/measurements/rsl'
    export GOPATH=$RSL_DIR

    echo "Starting OSX build"

    echo "Building rsl server"
    go build -o rsl-main "$RSL_DIR/src/Main.go" 

    export GOPATH='/Users/zhang/go'
    export PATH=$PATH:$(go env GOPATH)/bin
    export GOPATH=$(go env GOPATH)

    echo "Building rsl client"
    ./build_client
else
    echo "Build failed"
    exit 1
fi
echo "Build complete"