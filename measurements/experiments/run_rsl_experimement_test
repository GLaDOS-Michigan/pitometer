#!/bin/bash
# Run an RSL experiment

if ! uname -a | grep -q Linux; 
then
    echo "Error: This script should only be run on Linux"
    exit 1
fi

ROOT_DIR="/home/nudzhang/Documents/pitometer/measurements/experiments/data/rsl"
GIT_BRANCH="exp"

CLIENT_ID=20                            # node to use as client
CLIENT_THREADS=1                        # number of clients
BASE_TRIAL_DURATION=$(( 15 * 60 ))      # minimum duration in seconds
ITERATIONS=8                            # repeats of each trial
BATCH_SIZE=1                            # paxos batch size      
F_VALUES=("1" "2" "3" "4" "5")
TIMESTAMP=$(date +"%d-%b-%H%M")
CLOCK_MODE="off"

echo "Starting new RSL test experiment at time $TIMESTAMP"
echo ""
./git_pull_all_hosts $GIT_BRANCH
echo ""

for f in "${F_VALUES[@]}"
do
    # Generate node id's to use
    node_ids=()
    for ((id=7;id<$[ 7 + 2*f+1 ];id++))
    do
        node_ids+=("$id")
    done

    # Build locally and send executables to the target machines
    ./build_to_hosts $CLIENT_ID ${node_ids[@]}
    echo ""

    trial_duration=$(( $BASE_TRIAL_DURATION + $f ))  # Make trial duration a variable

    for ((trial=0;trial<$ITERATIONS;trial++))
    do
        time=$(date +"%d-%b-%H%M")
                echo "Starting RSL test trial at time $time"
                echo "    - f          : $f"
                echo "    - clients    : $CLIENT_THREADS"
                echo "    - batch size : $BATCH_SIZE"
                echo "    - duration   : $trial_duration"
                echo "    - trial      : $trial"
        trial_dir="$ROOT_DIR/$TIMESTAMP/f_$f/trial$trial"
        mkdir -p $trial_dir 

        # Start trial
        # echo "./start_rsl_trial $trial_dir $trial_duration $CLIENT_ID $CLIENT_THREADS $BATCH_SIZE ${node_ids[@]} > $trial_dir/info.log"
        ./start_rsl_trial $trial_dir $trial_duration $CLIENT_ID $CLIENT_THREADS $BATCH_SIZE $CLOCK_MODE ${node_ids[@]} > $trial_dir/info.log

        echo "Completed trial $trial for f=$f"
    done
done

end_timestamp=$(date +"%d-%b-%H%M")
echo "RSL experiment completed at time $end_timestamp"

# Process results immediately when done
sleep 5
echo "Processing results"
./process_rsl_results $ROOT_DIR/$TIMESTAMP
echo "Done"

